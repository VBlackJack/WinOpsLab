# EditorConfig - https://editorconfig.org
root = true

[*]
charset = utf-8
insert_final_newline = true
trim_trailing_whitespace = true

[*.md]
indent_size = 4
indent_style = space

[*.{yml,yaml}]
indent_size = 2
indent_style = space

[*.css]
indent_size = 2
indent_style = space

[*.py]
indent_size = 4
indent_style = space

[*.ps1]
indent_size = 4
indent_style = space

[Vagrantfile]
indent_size = 2
indent_style = space

[Makefile]
indent_style = tab
